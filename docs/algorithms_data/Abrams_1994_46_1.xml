  <algorithm_statement>Amount of wastage when making masonry blocks</algorithm_statement>
  <algorithm_math>Amount of wastage when making masonry blocks from rough stone: 45% (v1 is original amount of rough stone, v2 is finished masonry blocks)</algorithm_math>
  <variables>
    <var1>
      <unit>kg</unit><description></description>
      <op>var2 / 0.55</op>
    </var1>
    <var2>
      <unit>kg</unit><description></description>
      <op>var1 * 0.55</op>
    </var2>
  </variables>


  <algorithm_statement>A wage of mudbrick production for labourers was 3 litres of barley per 1 female person per day</algorithm_statement>
  <algorithm_math>3 l of barley per 1 p-d</algorithm_math>
  <variables>
    <var1>
      <unit>p-d</unit><description></description>
      <op>var2 / 3</op>
    </var1>
    <var2>
      <unit>l</unit><description></description>
      <op>var1 * 3</op>
    </var2>
  </variables>

</algdata>




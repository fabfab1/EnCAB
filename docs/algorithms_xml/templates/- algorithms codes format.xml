<algorithm>

<reference>algorithm reference [Authors_year_pagenumber OR Authors_year_pagenumber_sequentialnumber]</reference>

<biblioref>
  
  <source><!-- only 1 <source> allowed -->
    <author><surname>surname</surname><firstname>firstname</firstname></author>
    <author><surname>surname2</surname><firstname>firstname2</firstname></author>
    <year>yyyy</year>
    <!-- custom abbreviation: <abbrev>bibliographical abbreviation (for bibligraphy link)</abbrev> -->
    <pagenums>page numbers [numbers separated by dash or comma (e.g.: 45 or 45-46 or 45-46,48,55)]</pagenums>
  </source>
  
  <cited>
    <author><surname>surname</surname><firstname>firstname</firstname></author>
    <author><surname>surname2</surname><firstname>firstname2</firstname></author>
    <year>yyyy</year>
    <pagenums>page numbers for secondary reference</pagenums>
  </cited>
  
  <cited>
    <author><surname>surname</surname><firstname>firstname</firstname></author>
    <year>yyyy</year>
    <pagenums>page numbers for secondary reference</pagenums>
  </cited>
  
</biblioref>



<algorithm_description><!-- use spaces instead of underscore "_" -->
  
  <algorithm_type>[filenames within "algorithm_type/"]</algorithm_type>
  <position_in_process>[filenames within "position_in_process/"]</position_in_process>
  <material>[filenames within "material/"]</material>
  <source_type>[filenames within "source_type/"]</source_type>
  <source_chronology>[filenames within "source_chronology/"]</source_chronology>
  <source_geography>[filenames within "source_geography/"]</source_geography>
  
</algorithm_description>



<algdata>

  <algorithm_statement>algorithm in statement format</algorithm_statement>
  <algorithm_math>algorithm in mathematical format</algorithm_math>

  <variables><!-- each variable and result MUST have a different name, as many as needed -->
    <var1>
      <unit>unit type [filenames within "unit/"]</unit><description>description of unit</description>
      <op>var2 * 6 [operation (in javascript) to calcolate var1 if possible]</op>
    </var1>
    <var2>
      <unit>m3</unit><description>mortar</description>
      <op>var1 / 6</op>
    </var2>
  </variables>
  
  <results><!-- results are not user editable, use only if necessary -->
    <result1>
      <unit>m3</unit><description>mudbricks</description>
      <op>var1 * (5/6) [mandatory in results]</op>
    </result1>
  </results>

</algdata>



<algnotes>

  <general_notes>a general note file</general_notes>
  <biblio_notes>a general note file on the bibliography</biblio_notes>

</algnotes>




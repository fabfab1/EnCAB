  <algdata>

    <algorithm_statement> in statement format, to be used as title </algorithm_statement>
    <algorithm_math> algorithm in mathematical format, to be used as display on algorithm page </algorithm_math>

    <variables> <!-- INPUT variables, each MUST have a different name -->
      <var1>
        <unit>[unit type + link to ../un/ENTRY.html ]</unit><description></description>
        <op>[operation in function of other variables (e.g. var2 * 5 )]</op>
      </var1>
      <var2>
        <unit>m3</unit><description>mudbricks</description>
        <op></op>
      </var2>
    </variables>
    
    <results><!-- OUTPUT results (no user edit), each result MUST have a different name -->
      <result1>
        <value></value><unit>m3</unit><description>wall from mortar</description>
        <op>var2 * 6</op><!-- <op>..</op> in result is MANDATORY -->
      </result1>
      <result2>
        <value></value><unit>m3</unit><description>mortar in wall</description>
        <op>var1 * (1/6)</op>
      </result2>
    </results>

  </algdata>




  <algnotes>

